{% extends 'base.html.twig' %}

{% block body %}

<div class="container mt-4 justify-content-space-between">
    <h2>Gallery</h2>
    <div class="row space-between">
      <div class="col-md-9">
        <div class="d-flex">
          <h2>L'année et lieux des travaux :  &nbsp; </h2>
          <h2>{{ realization.year|default(0)  }}</h2>&nbsp; <h2>-</h2>&nbsp; <h2>{{  realization.locations }}</h2>
        </div>
      </div>
      <div class="col-md-3">
        <h3>Catégories</h3>
        <ul class='list-unstyled d-flex'>
          {% for category in realization.categorys %}
            <a href="#" class='text-decoration-none m-2'><li>{{ category }}</li></a>
          {% endfor %}
        </ul>
      </div>
    </div>
</div>

<div class="wrapper container mt-4">
    <div class="gallery">
    {% for image in realization.realizationImages %}
        <div class="image">
            <span>
              <img style="width: 400px; height: 300px; object-fit: fill;" src="{{ asset('images/realizations/' ~ image.name) }}" alt="Image de réalisation">
            </span>
        </div>
    {% endfor %}
</div>

  </div>
  <div class="preview-box">
    <div class="details">
      <span class="title">Image <p class="current-img"></p> of <p class="total-img"></p></span>
      <span class="icon fas fa-times"></span>
    </div>
    <div class="image-box">
      <div class="slide prev"><i class="fas fa-angle-left"></i></div>
      <div class="slide next"><i class="fas fa-angle-right"></i></div>
      <img src="" alt="">
    </div>
  </div>
  <div class="shadow"></div>

  {% endblock %}